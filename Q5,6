#include <iostream>
#include<queue>
using namespace std;
// heaps is a complete binary tree ...we doing max heap in which parent is  bigger than both childs
/*
node index i
parent index i/2
left child 2i
right child 2i+1
*/
class heap
{
public:
    int arr[100];
    int size = 0;
    void insert(int val)
    {
        size++;
        int index = size;
        arr[index] = val;

        while (index > 1)
        {
            int parent = index / 2;
            if (arr[parent] < arr[index])
            {
                swap(arr[parent], arr[index]);
                index = parent;
            }
            else
                return;
        }
    }
    void print()
    {
        for (int i = 1; i <= size; i++)
        {
            cout << arr[i] << " ";
        }
        cout << endl;
    }
    void deletefromheap()
    {
        if (size == 0)
        {
            cout << "nothing to delete" << endl;
            return;
        }

        arr[1] = arr[size]; // swap the root node from last node
        size--;             // remove the last node
        int i = 1;
        while (i < size)
        {
            int leftindex = 2 * i;
            int rightindex = 2 * i + 1;
            if (leftindex <= size && arr[i] < arr[leftindex])
            {
                swap(arr[i], arr[leftindex]);
                i = leftindex;
            }
            else if (rightindex <= size && arr[i] < arr[rightindex])
            {
                swap(arr[i], arr[rightindex]);
                i = rightindex;
            }
            else
                return;
        }
    }
};
// leaf nodes are from (n/2+1) to n
void heapify(int arr[], int n, int i) // log (n)
{
    int largest = i;
    int left = 2 * i;
    int right = 2 * i + 1;
    if (left <= n && arr[left] > arr[largest])
    {
        largest = left;
    }
    if (right <= n && arr[right] > arr[largest])
    {
        largest = right;
    }
    if (largest != i)
    {
        swap(arr[largest], arr[i]);
        heapify(arr, n, largest);
    }
}
void heapsort(int arr[], int n)
{
    int size = n;
    while (size > 1)
    {
        swap(arr[1], arr[size]);
        size--;
        heapify(arr, n, 1);
    }
}
int main()
{
    heap h;
    h.insert(79);
    h.insert(34);
    int arr[6] = {-1, 54, 56, 34, 23, 67};
    int n = 5;
    for (int i = 5 / 2; i > 0; i--)
    {
        heapify(arr, n, i);
    }
    priority_queue<int> pq; //default max heap
    pq.push(6);
    pq.push(9);
    pq.push(4);

    return 0;
}
